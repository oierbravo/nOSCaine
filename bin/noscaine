#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander');
var osc = require('omgosc');

program
  .version('0.0.1')
  .usage('[options]')
  .option('-p, --port <port>', 'specify the port [9999]', Number, 9999)
  .option('-h, --host <host>', 'specify the host', String, 'localhost')
  .parse(process.argv);

var oscSniffer = new osc.UdpReceiver(program.port,program.host);
oscSniffer.on('',gotMessage);
console.log('OSC Sniffer started on %s:%d', program.host,program.port);

function gotMessage(message){
	console.log(message);
}